<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.festemberoc.Success"
    android:id="@+id/d"
    android:background="#010101">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correct Credentials"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#010100"
        android:textStyle="bold|italic"
        android:textColor="#fdff36"
        android:textSize="35sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Roll No:"
        android:id="@+id/Roll"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40sp"
        android:textColor="#fffe30"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FOOD COUPON"
        android:id="@+id/fcard"
        android:onClick="fcardPressed"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="T SHIRT"
        android:id="@+id/tshirt"
        android:layout_below="@+id/fcard"
        android:layout_marginTop="10dp"
        android:onClick="tshirtPressed"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Roll"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_weight="0.2"
        android:layout_marginTop="10dp"
        android:background="#ffffcc"
        android:onClick="Next_Scan"
        android:textStyle="bold" />

</LinearLayout>
