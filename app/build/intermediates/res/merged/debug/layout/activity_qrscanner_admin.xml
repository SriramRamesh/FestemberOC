<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRScanner_admin" >


    <TextView
        android:id="@+id/title_QRcode_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Scan ADMIN QRCode"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/red_line_image_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/red_line"
        android:layout_below="@+id/title_QRcode_admin" />

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qrdecoderview_admin"
        android:layout_below="@+id/red_line_image_admin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
